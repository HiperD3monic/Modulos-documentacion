<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_landed_cost_form_inherit_pedimiento" model="ir.ui.view">
        <field name="name">stock.landed.cost.form.inherit.pedimiento</field>
        <field name="model">stock.landed.cost</field>
        <field name="inherit_id" ref="stock_landed_costs.view_stock_landed_cost_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_revert_pedimento"
                        string="Revert Pedimento"
                        type="object"
                        class="btn-secondary"
                        invisible="state != 'done'"
                        confirm="Are you sure you want to revert this Pedimento? This will revert ALL associated purchase orders."/>
            </xpath>
        </field>
    </record>
</odoo>
